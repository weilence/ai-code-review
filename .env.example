# =================================
# Server Configuration
# =================================
PORT=3000
HOST=0.0.0.0
LOG__LEVEL=info

# =================================
# GitLab Configuration
# =================================
GITLAB__URL=https://gitlab.com
GITLAB__TOKEN=glpat-xxxxxxxxxxxxxxxxxxxx
GITLAB__WEBHOOK_SECRET=your-secure-webhook-secret

# =================================
# AI Providers Configuration
# =================================
# Comma-separated list of providers to use (first = primary, rest = fallbacks)
# Valid options: anthropic, openai, github-copilot, openai-compatible
AI__PROVIDERS=anthropic

# Anthropic
AI__ANTHROPIC__API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxx
AI__ANTHROPIC__MODEL=claude-sonnet-4-20250514
# AI__ANTHROPIC__BASE_URL=
# AI__ANTHROPIC__TEMPERATURE=0.3
# AI__ANTHROPIC__MAX_TOKENS=4000

# OpenAI
# AI__OPENAI__API_KEY=sk-xxxxxxxxxxxxxxxxxxxx
# AI__OPENAI__MODEL=gpt-4o
# AI__OPENAI__BASE_URL=
# AI__OPENAI__TEMPERATURE=0.3
# AI__OPENAI__MAX_TOKENS=4000

# GitHub Copilot (requires OAuth: visit /auth/copilot after starting server)
# AI__GITHUB-COPILOT__MODEL=claude-sonnet-4
# AI__GITHUB-COPILOT__TEMPERATURE=0.3
# AI__GITHUB-COPILOT__MAX_TOKENS=4000

# OpenAI-Compatible (for LM Studio, Ollama, etc.)
# AI__OPENAI-COMPATIBLE__API_KEY=your-api-key
# AI__OPENAI-COMPATIBLE__MODEL=your-model
# AI__OPENAI-COMPATIBLE__BASE_URL=http://localhost:1234/v1
# AI__OPENAI-COMPATIBLE__TEMPERATURE=0.3
# AI__OPENAI-COMPATIBLE__MAX_TOKENS=4000

# =================================
# Webhook Events Configuration
# =================================
WEBHOOK__MR__ENABLED=true
WEBHOOK__MR__EVENTS=open,update
WEBHOOK__MR__REVIEW_DRAFTS=false

WEBHOOK__PUSH__ENABLED=false
# WEBHOOK__PUSH__BRANCHES=main,develop

WEBHOOK__NOTE__ENABLED=true
WEBHOOK__NOTE__COMMANDS=/review,/ai-review

# =================================
# Review Settings
# =================================
REVIEW__MAX_FILES=50
REVIEW__MAX_LINES_PER_FILE=1000
REVIEW__LANGUAGE=en # en/zh
# REVIEW__SKIP_FILES=*.lock,package-lock.json,yarn.lock,*.min.js,*.min.css
REVIEW__INLINE_COMMENTS=true
REVIEW__SUMMARY_COMMENT=true
